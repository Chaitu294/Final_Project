@model Final_Project.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.AppTitle
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Start Date & Time
        </dt>
        <dd class="col-sm-10">
            @Model.StartDateTime
        </dd>
        <dt class="col-sm-2">
            End Date & Time
        </dt>
        <dd class="col-sm-10">
            @Model.EndDateTime
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Attendees
        </dt>
        <dd class="col-sm-10">
            @Model.Attendees
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="AppId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
