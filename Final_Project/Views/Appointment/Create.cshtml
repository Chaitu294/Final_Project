@model Final_Project.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<h2 class="text-white">Create Appointment</h2>
<hr />

<form asp-action="Create" class="p-3">
    <div class="form-group p-1">
        <label asp-for="AppTitle" class="control-label"></label>
        <input asp-for="AppTitle" class="form-control" placeholder="Title" />
        <span asp-validation-for="AppTitle" class="text-danger"></span>
    </div>
    <div class="form-group p-1">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group p-1 row">
        <div class="col-6">
            <label asp-for="StartDateTime" class="control-label"></label>
            <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="EndDateTime" class="control-label"></label>
            <input asp-for="EndDateTime" class="form-control" type="datetime-local" />
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group p-1">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" placeholder="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group p-1">
        <label asp-for="Attendees" class="control-label"></label>
        <input asp-for="Attendees" class="form-control" placeholder="Attendees" />
        <span asp-validation-for="Attendees" class="text-danger"></span>
    </div>
    <div class="form-group p-1">
        <label asp-for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group p-1">
        <label asp-for="TaskId" class="control-label"></label>
        <select asp-for="TaskId" class="form-control" asp-items="ViewBag.Tasks"></select>
        <span asp-validation-for="TaskId" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <div class="d-flex align-items-center">
            <input type="submit" value="Create" class="btn btn-primary" style="margin-right:10px; width:15%;" />
            <a asp-action="Index" class="btn btn-secondary" style="width:15%;">Back to List</a>
        </div>
    </div>
</form>

