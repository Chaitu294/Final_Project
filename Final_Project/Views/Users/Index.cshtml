@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}
<h1>Users</h1>
<li class="btn btn-primary">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Add New User</a>
</li>

<table class="table table-striped mt-4">
    <thead>
        <tr class="bg-primary text-white">
            <th>First Name</th>
            <th>Last Name</th>
            
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
               
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.Id">Roles</a>
                    <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Edit" asp-route-userId="@user.Id">Profile</a>
                    <form asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
