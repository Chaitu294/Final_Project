@model Final_Project.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            MiddleName
        </dt>
        <dd class="col-sm-10">
            @Model.MiddleName
        </dd>
        <dt class="col-sm-2">
            Surname
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            PreferredName
        </dt>
        <dd class="col-sm-10">
            @Model.PreferredName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            PhoneNumber
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
    </dl>

    <form asp-action="DeleteConfirm" method="post">
        <input type="hidden" name="id" value="@Model.CustomerId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="CustomerManagement" class="btn btn-secondary">Back to List</a>
    </form>
</div>
