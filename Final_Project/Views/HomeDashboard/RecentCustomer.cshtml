<table class="table table-striped">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Customer Name</th>
            <th>Viewed Time</th>
            <th>Viewed By</th>
        </tr>
    </thead>
    <tbody>
        @{
            int serial = 0;
        }
        @foreach (var RecentCustomer in Model)
        {
            <tr>
                @{
                    serial = serial + 1;
                }
                <td>@serial </td>
                <td>@RecentCustomer.PreferredName</td>
                <td>@RecentCustomer.ViewedTime</td>
                <td>@RecentCustomer.ViewedBy</td>                
            </tr>
        }
    </tbody>
</table>
