@model Customer
@{
    ViewData["Title"] = "CreateNewLead";
}

<a class="btn btn-outline-primary" asp-controller="HomeDashboard" asp-action="CustomerManagement">Customer List</a>
  
@if (User.IsInRole("User"))
{
    <form class="form" asp-action="CreateNewLead" method="post">
        <span class="heading">Create New Lead</span>
        <br />
        <input type="text" placeholder="Title" class="form--input" asp-for="Title" />
        <input type="text" placeholder="FirstName" class="form--input" asp-for="FirstName" />
        <input type="text" placeholder="MiddelName" class="form--input" asp-for="MiddleName">
        <input type="text" placeholder="Surname" class="form--input" asp-for="Surname">
        <input type="text" placeholder="PreferredName" class="form--input" asp-for="PreferredName">
        <input type="text" placeholder="Email" class="form--input" asp-for="Email">
        <input type="number" placeholder="PhoneNumber" class="form--input" asp-for="PhoneNumber">
        <input type="text" placeholder="Address" rows="3" class="form--input" asp-for="Address">

        <br />
        <button class="button-submit" type="submit"> Create </button>

    </form>
}