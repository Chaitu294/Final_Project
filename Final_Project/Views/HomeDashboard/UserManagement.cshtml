@model List<User>

@{
    ViewData["Title"] = "UserManagement";
}

<h3 class="heading">User Management</h3>

<div class="row row-cols-1 row-cols-md-4 ">
        @foreach (var User in Model)
        {
            <div class="col">
            <div class="card m-3" style="min-width:18rem; max-width:30%;">
                <div class="card-header">
                    <h3> @User.UserName</h3>
                    <p> @User.Created</p>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top imgThumbnail" src=@User.PhotoPath />
                </div>
                <div class="card-footer text-center">
                    <a href="" class="btn btn-primary m-1"> View </a>
                    <a href="" class="btn btn-secondary m-1"> Edit </a>
                    <a href="" class="btn btn-danger m-1"> Remove </a>
                </div>
            </div>
            </div>
        }
    </div>
