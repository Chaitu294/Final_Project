@model List<Final_Project.Models.NewTask>

<h1>Task Management</h1>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="NewTask" asp-action="Create">
                Create New Task
            </a>
        </div>
        <br />
        <div>
            <h2>Tasks</h2>
        </div>
    </div>

    <!-- Filtering Form -->
    <form method="get" class="mt-4">
        <div class="row">
            <div class="col-md-3">
                <label for="priorityFilter">Priority</label>
                <select id="priorityFilter" name="priorityFilter" class="form-control">
                    <option value="">Select Priority</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="statusFilter">Status</label>
                <select id="statusFilter" name="statusFilter" class="form-control">
                    <option value="">Select Status</option>
                    <option value="NotStarted">Not Started</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="startDate">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control" />
            </div>
            <div class="col-md-3">
                <label for="endDate">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control" />
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <!-- Tasks Table -->
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Task ID</th>
                <th>Task Title</th>
                <th>Description</th>
                <th>Client Name</th>
                <th>Due Date & Time</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Assigned To</th>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.TaskId</td>
                    <td>@task.TaskTitle</td>
                    <td>@task.Description</td>
                    <td>@task.ClientName</td>
                    <td>@task.DueDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@task.Priority</td>
                    <td>@task.Status</td>
                    <td>@task.AssignedTo</td>
                    <td>@task.CustomerId</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@task.TaskId" class="btn btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@task.TaskId" class="btn btn-danger">Delete</a>
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

