@model Final_Project.Models.NewTask
@{
    ViewBag.Title = "Create New Task";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header text-white" style="background:#008776">
                    <h2>Create New Task</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" style="color:#2aa198">
                        <div class="form-group mb-3">
                            <label asp-for="TaskTitle" class="form-label">Task Title</label>
                            <input asp-for="TaskTitle" class="form-control" placeholder="Enter task title" />
                            <span asp-validation-for="TaskTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ClientName"></label>
                            <input asp-for="ClientName" class="form-control" placeholder="ClientName" />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" rows="5" class="form-control" placeholder="Enter task description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="DueDateTime" class="form-label">Due Date & Time</label>
                            <input asp-for="DueDateTime" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DueDateTime" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Priority" class="form-label">Priority</label>
                            <select asp-for="Priority" class="form-control">
                                <option value="">Select Priority</option>
                                <option value="Low">Low</option>
                                <option value="Medium">Medium</option>
                                <option value="High">High</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        
                        <input asp-for="Status" type="hidden" value="NotStarted"/>
                     
                        <div class="form-group mb-3">
                            <label asp-for="AssignedTo" class="control-label"></label>
                            <select asp-for="AssignedTo" asp-items="ViewBag.Users" class="form-control"></select>
                            <span asp-validation-for="AssignedTo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CustomerId" class="form-label">Customer</label>
                            <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control">
                                <option value="">Select Customer</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-controller="NewTask" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


