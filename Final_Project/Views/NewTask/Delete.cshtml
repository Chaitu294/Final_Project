@model Final_Project.Models.NewTask

@{
    ViewBag.Title = "Delete Task";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Task</h2>
                </div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this task?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Task Title</dt>
                        <dd class="col-sm-9">@Model.TaskTitle</dd>
                        <dt class="col-sm-3">Client Name</dt>
                        <dd class="col-sm-9">@Model.ClientName</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                        <dt class="col-sm-3">Due Date & Time</dt>
                        <dd class="col-sm-9">@Model.DueDateTime</dd>
                        <dt class="col-sm-3">Priority</dt>
                        <dd class="col-sm-9">@Model.Priority</dd>
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Model.Status</dd>
                    </dl>
                    <form asp-action="DeleteConfirm" method="post">                       
                        <input type="hidden" asp-for="TaskId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="NewTask" asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

